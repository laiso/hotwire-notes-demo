<div class="screen-center">
  <div>
    <%= render "layouts/logo" %>
  </div>
  <div>
    <%= form_with url: auth_signup_path do |form| %>
      <div class="label">
        <%= form.label :name, "Name:" %>
      </div>
      <div class="">
        <%= form.text_field :name %>
      </div>

      <div class="label">
        <%= form.label :password, "Password" %>
      </div>
      <div>
        <%= form.password_field :password %>
      </div>

      <div class="">
        <%= form.submit "Sign Up" %>
      </div>

      <div>
        <%= link_to "Log In", auth_index_path %>
      </div>

      <div class="error">
        <%= notice %>
      </div>
    <% end %>
  </div>
</div>